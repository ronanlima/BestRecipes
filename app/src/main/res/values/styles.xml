<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MarginRecyclerRecipe">
        <item name="android:layout_marginLeft">@dimen/recycler_margin_left</item>
        <item name="android:layout_marginStart">@dimen/recycler_margin_start</item>
        <item name="android:layout_marginRight">@dimen/recycler_margin_right</item>
        <item name="android:layout_marginEnd">@dimen/recycler_margin_end</item>
        <item name="android:layout_marginTop">@dimen/recycler_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/recycler_margin_bottom</item>
    </style>

    <style name="MarginTextItemRecipe">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_recipe_item_margin_left</item>
        <item name="android:layout_marginStart">@dimen/text_recipe_item_margin_start</item>
        <item name="android:layout_marginRight">@dimen/text_recipe_item_margin_right</item>
        <item name="android:layout_marginEnd">@dimen/text_recipe_item_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/text_recipe_item_margin_bottom</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

</resources>
